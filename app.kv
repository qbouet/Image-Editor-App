BoxLayout:
    orientation:'horizontal'
    BoxLayout:
        size_hint_x: 0.03
    BoxLayout:
        orientation:'vertical'
        size_hint_x: 0.2
        Button:
            size_hint_y: 0.1
            text: 'Select images'
            on_press: app.select_directory()
        Button:
            size_hint_y: 0.1
            text: 'Clear'
            on_press: app.clear_inputs()
        BoxLayout:
            size_hint_y: 0.01
        Label:
            size_hint_y: 0.1
            font_size: 30
            color: (1, 0, 0, 1)
            text: app.status_label
        Button:
            size_hint_y: 0.1
            text: 'Save graph'
            on_press: app.save_image()
        BoxLayout:
            size_hint_y: 0.01
    BoxLayout:
        size_hint_x: 0.04
    BoxLayout:
        size_hint_x: 0.7
        orientation:'vertical'
        BoxLayout:
            size_hint_y: 0.9
            orientation:'horizontal'
            BoxLayout:
                size_hint_x: 0.1
                orientation:'vertical'
                Slider:
                    size_hint_x: 0.05
                    id: top_slider
                    min: 100
                    max: 0
                    step: 1
                    orientation: 'vertical'
                Slider:
                    size_hint_x: 0.05
                    id: bottom_slider
                    min: 0
                    max: 100
                    step: 1
                    orientation: 'vertical'
            Image:
                size_hint_x: 0.9
                id: img
                source:'default_image.jpg'  #image source
                allow_stretch: True
                keep_ratio: True
        BoxLayout:
            size_hint_y: 0.1
            orientation:'horizontal'
            Slider:
                id: left_slider
                min: 0
                max: 100
                step: 1
                orientation: 'horizontal'
            Slider:
                id: right_slider
                min: 100
                max: 0
                step: 1
                orientation: 'horizontal'
        BoxLayout:
            orientation:'horizontal'
            size_hint_y: 0.1
            Button:
                text: "<"
                on_press: app.display_image(True, False)
            Button:
                text: ">"
                on_press: app.display_image(False, True)
        BoxLayout:
            size_hint_y: 0.05
    BoxLayout:
        size_hint_x: 0.03

